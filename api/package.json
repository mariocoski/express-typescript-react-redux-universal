{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Mariusz Rajczakowski",
  "license": "MIT",
  "scripts": {
    "db:create": "NODE_ENV=development && sequelize db:create",
    "db:drop": "NODE_ENV=development && sequelize db:drop",
    "db:recreate": "yarn db:drop && yarn db:create",
    "db:restart": "yarn db:recreate && yarn db:install",
    "db:start": "yarn db:create && yarn db:install",
    "db:install": "NODE_ENV=development && sequelize db:migrate && sequelize db:seed:all",
    "build": "rm -rf ./build && tsc",
    "build:watch": "rm -rf ./build && tsc --watch",
    "start": "NODE_ENV=development && node ./build/server.js",
    "test": "./node_modules/.bin/jest --coverage",
    "test:watch": "jest --coverage --watch",
    "postinstall": "cp -n .env.example .env"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "^0.0.34",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.1",
    "@types/es6-shim": "^0.31.35",
    "@types/express": "^4.0.37",
    "@types/express-serve-static-core": "^4.0.52",
    "@types/iconv-lite": "^0.0.1",
    "@types/jest": "^21.1.2",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mime": "^1.3.1",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.28",
    "@types/passport": "^0.3.4",
    "@types/passport-jwt": "^2.0.24",
    "@types/passport-local": "^1.0.31",
    "@types/sequelize": "^4.0.76",
    "@types/socket.io": "^1.4.31",
    "@types/superagent": "^3.5.6",
    "@types/supertest": "^2.0.3",
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "dotenv": "^4.0.0",
    "jest": "^21.2.1",
    "sequelize-cli": "^3.0.0",
    "sqlite3": "^3.1.13",
    "superagent": "^3.6.3",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "express-validator": "^4.2.1",
    "iconv-lite": "^0.4.19",
    "jsonwebtoken": "^8.0.0",
    "morgan": "^1.8.2",
    "mysql2": "^1.4.2",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^4.13.6",
    "socket.io": "^2.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            "env"
          ],
          "plugins": [
            "transform-async-to-generator"
          ]
        }
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "mapCoverage": true,
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.test.(ts|js)"
    ]
  }
}
